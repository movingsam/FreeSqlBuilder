@using FreeSql.Generator.Core
@using FreeSql.TemplateEngine
@model FreeSql.TemplateEngine.BuildTask
@{
    Layout = "_Layout.cshtml";
    var project = Model.Project;
    var table = Model.CurrentTable;
}

@functions
{

    string GetDto(Project project,string tableName)
    {
        return project.GetBuilder("Dtos").GetName(tableName);
    }
    string GetPostDataDto(Project project,string tableName)
    {
        return project.GetBuilder("PostDataDto").GetName(tableName);
    }
    string GetPageViewDto(Project project,string tableName)
    {
        return project.GetBuilder("PageViewDto").GetName(tableName);
    }
    string GetPagedDto(Project project,string tableName)
    {
        return project.GetBuilder("PagedDtos").GetName(tableName);
    }

}
@table.ImportUsings.GetUsing()
@((table.NavigateInfos.Count>0)? "using System.Threading.Tasks;" :string.Empty)
using GRES.Framework.Services;

namespace @(project.ProjectInfo.ProjectName).Abstractes.@(project.GetBuilder("IService").Name)
{
    @($"{table.Comment}服务接口".GetCSharpSummary())
    public interface I@(project.GetBuilder("IService").GetName(table.Name)) : IServiceBase
    {
@(Html.NewLine("#region 主表相关增删改查"))
@Html.PadLeft(4)@($"{table.Comment}分页查询".GetCSharpSummary())
@Html.PadLeft(4)Task<@(GetPageViewDto(project,table.Name))>Query@(table.Name)Page (@GetPagedDto(project,table.Name) dto);
@Html.PadLeft(4)@($"{table.Comment}新增".GetCSharpSummary())
@Html.PadLeft(4)Task<@("bool")>Add@(table.Name) (@GetPostDataDto(project,table.Name) dto);
@Html.PadLeft(4)@($"{table.Comment}修改".GetCSharpSummary())
@Html.PadLeft(4)Task<@("bool")>Update@(table.Name) (@GetPostDataDto(project,table.Name) dto);
@Html.PadLeft(4)@($"{table.Comment}删除".GetCSharpSummary())
@Html.PadLeft(4)Task<@("bool")> Delete@(table.Name)(@table.PrimaryTypeName@("[]") ids);
@Html.PadLeft(4)@($"{table.Comment}查询".GetCSharpSummary())
@Html.PadLeft(4)Task<@(GetDto(project,table.Name))> Get@(table.Name) (@table.PrimaryTypeName [] ids);

@(Html.NewLine("#endregion"))
 @(Html.NewLine("#region 导航属性相关信息"))

    @foreach (var navigate in table.NavigateInfos)
    {
        if (navigate.NavigateTableInfo != null) { 
        @(Html.NewLine($"#region {navigate.Comment}相关"))
        @($"{navigate.Comment}分页查询".GetCSharpSummary())
        @Html.NewLine()
        @:Task<@GetPageViewDto(project,navigate.ColumnName)> Query@(navigate.ColumnName)Page (@GetPagedDto(project,navigate.ColumnName)  dto);
        @($"{navigate.Comment}新增".GetCSharpSummary())
        @Html.NewLine()
        @:Task<bool> Add@(navigate.ColumnName) ( @GetPostDataDto(project,navigate.ColumnName) dto);
        @($"{navigate.Comment}修改".GetCSharpSummary())
        @Html.NewLine()
        @:Task<bool> Update@(navigate.ColumnName) ( @GetPostDataDto(project,navigate.ColumnName) dto);
        @($"{navigate.Comment}删除".GetCSharpSummary())
        @Html.NewLine()
        @:Task<bool> Delete@(navigate.ColumnName) ( @navigate.NavigateTableInfo.PrimaryTypeName [] id);
        @(Html.NewLine("#endregion"))
        }
    }
@(Html.NewLine("#endregion"))
    }
}