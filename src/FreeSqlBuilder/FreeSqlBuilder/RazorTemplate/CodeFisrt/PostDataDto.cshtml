@using FreeSql.Generator.Core
@using FreeSql.TemplateEngine
@model FreeSql.TemplateEngine.BuildTask
@{
    Layout = "_Layout.cshtml";
    var project = Model.Project;//当前执行项目
    var table = Model.CurrentTable;//当前执行表
    var builder = Model.CurrentBuilder;//当前执行构建器
    var className = builder.GetName(table.Name);//通过转换器转换名称
}

@table.GetNameSpaceUsing();

namespace @(project.ProjectInfo.ProjectName).@builder.Name
{
    public class @className : PostDataDtoBase
    {
        @foreach (var column in table.ColumnInfos)
        {
            @if (column.ColumnName == "Id")
            {
                continue;
            }
            @column.Comment.GetCSharpSummary()
            @Html.NewLine()
            @column.GetAttribute()
            @:public  @column.CsType @column.ColumnName { get; set; }
            @Html.NewLine()
        }
        @foreach (var navigate in table.NavigateInfos)
        {
            @if (navigate.NavigateTableInfo != null) 
            { 
            @navigate.Comment.GetCSharpSummary()
            @Html.NewLine()
            @:public virtual @builder.GetName(navigate.NavigateTableInfo.Name) @navigate.ColumnName { get; set; }
            }
            @Html.NewLine()
        }
    }
}